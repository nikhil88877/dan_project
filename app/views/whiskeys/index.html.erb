<p id="notice"><%= notice %></p>

<h1>Whiskeys</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Taste</th>
      <th>Color</th>
      <th>Smokiness</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @whiskeys.each do |whiskey| %>
      <tr>
        <td><%= whiskey.title %></td>
        <td><%= whiskey.description %></td>
        <td><%= whiskey.taste %></td>
        <td><%= whiskey.color %></td>
        <td><%= whiskey.smokiness %></td>
        <td><%= link_to 'Show', whiskey %></td>
        <td><%= link_to 'Edit', edit_whiskey_path(whiskey) %></td>
        <td><%= link_to 'Destroy', whiskey_path(whiskey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Whiskey', {action: :new}, method: :get %>
